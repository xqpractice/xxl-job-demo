root = true

[*]
charset = utf-8
tab_width = 4
end_of_line = lf
indent_size = 4
indent_style = space
max_line_length = 140
insert_final_newline = true
ij_visual_guides = 100, 120, 140

[*.java]
ij_java_class_count_to_use_import_on_demand = 50
ij_java_names_count_to_use_import_on_demand = 30

[*.groovy]
ij_groovy_label_indent_size = 4

[*.json]
indent_size = 2

[{*.yml, *.yaml}]
indent_size = 2
ij_continuation_indent_size = 2